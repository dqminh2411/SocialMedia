.post-container {
    display: flex;
    justify-content: center;
    padding: 30px;
    background-color: #f0f2f5;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  .post-card {
    display: flex;
    flex-direction: row;
    background-color: white;
    max-width: 900px;
    width: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .post-image {
    flex: 1;
    background-color: #0d254d;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30px;
    text-align: center;
  }
  
  .quote-box {
    max-width: 300px;
  }
  
  .quote-text {
    font-size: 20px;
    line-height: 1.5;
  }
  
  .quote-author {
    margin-top: 20px;
    font-size: 12px;
    font-style: italic;
    opacity: 0.8;
  }
  
  .post-content {
    flex: 1;
    padding: 25px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .post-header {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
  }
  
  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 10px;
  }
  
  .username {
    font-weight: bold;
    font-size: 14px;
  }
  
  .post-body {
    font-size: 14px;
    color: #333;
    line-height: 1.6;
  }
  
  .post-body ul {
    padding-left: 20px;
    margin: 10px 0;
  }
  
  .post-body li {
    margin-bottom: 5px;
  }
  
  .post-footer {
    margin-top: 20px;
  }
  
  .time {
    display: block;
    font-size: 12px;
    color: gray;
    margin-bottom: 10px;
  }
  
  .comment-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    font-size: 14px;
    border-radius: 5px;
    outline: none;
  }
  .line {
    width: 85%;
  }
  